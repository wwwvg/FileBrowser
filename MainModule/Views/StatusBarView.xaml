<UserControl x:Class="MainModule.Views.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StatusBar Name="StatusBarFileInfo">
            <Label Content="{Binding About}"></Label>
            <ContentControl prism:RegionManager.RegionName="ErrorRegion"/>
        </StatusBar>
    </Grid>
</UserControl>
