<Window x:Class="FileBrowser.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Icon="/Icons/Browser.png" Height="768" Width="1024" >

    <DockPanel>
        <ContentControl DockPanel.Dock="Top" prism:RegionManager.RegionName="ToolBarRegion" />
        <ContentControl DockPanel.Dock="Bottom" prism:RegionManager.RegionName="StatusBarRegion" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"></ColumnDefinition>
                <ColumnDefinition Width="3"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <ContentControl prism:RegionManager.RegionName="FileListRegion" Grid.Column="0"/>
            <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3" HorizontalAlignment="Center" VerticalAlignment="Stretch" />
            <ContentControl prism:RegionManager.RegionName="ContentRegion" Grid.Column="2"/>
        </Grid>
        
    </DockPanel>
    
</Window>
